{{#if updateQuestion}}
<div class="panel panel-success">
  <div class="panel-heading">
    <h1>Edit Question:</h1>
  </div>
  <div class="panel-body">
    <div>
      <form>
        <div class="form-group">
        <label for="author">Author</label>
        {{input class="form-control" value=author id="author" placeholder=question.author}}
        </div>
        <div class="form-group">
        <label for="content">Question</label>
        {{input class="form-control" value=content id="content" placeholder=question.content}}
        </div>
        <div class="form-group">
          <label for="note">Notes</label>
          {{textarea class="form-control" rows="6" value=note id="note" placeholder=question.note}}
        </div>
        <div class="panel-footer">
          <button class="btn bg-success"{{action 'update' question}}>Save</button>
        </div>
      </form>
    </div>
  </div>
</div>

{{else}}
  <button class="btn bg-success"{{action 'updateQuestionFormShow'}}>Update Question</button>
  <button class="btn bg-danger"{{action 'deleteQuestion' question}}>Delete Question</button>
{{/if}}
