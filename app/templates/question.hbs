<div class=" well">
  <div class="row">
    <div class="col-md-6">
      <div class="panel">
        <div class="panel panel-heading">
          <h2>{{model.content}}</h2>
        </div>
        <div class="panel panel-body">
          <p>{{model.note}}</p>
        </div>
        <div class="panel panel-footer">
          {{update-question question=model update="update" delete="delete" destroyAnswer="destroyAnswer"}}

        </div>
      </div>



    </div>
    <div class="col-md-6">
      <h4>Reply to {{model.author}}</h4>
      {{new-answer saveAnswer="saveAnswer" question=model}}
      <h4>Answers:</h4>
      <ul>
        {{#each model.answers as |answer|}}
          <li>{{answer.content}} --{{answer.author}}</li>
        {{/each}}
      </ul>
    </div>
  </div>

</div>
